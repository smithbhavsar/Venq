<%- include('header') -%>

<main role="main">
  <div class="container">
    <div class="row px-5 mt-5">
      <h1><%=title%></h1>
      <p class="mt-2"><%=content%></p>
      <div class="col col-lg-8 col-md-6 col-sm-12 pr-5">
        <img class="mt-2" src="img/<%=img%>" alt="" width="100%" height="90%" />
      </div>
      <div class="col col-lg-3 col-md-6 col-sm-12 pl-4 mt-3">
        <h5>Funding Raised</h5>
        <div class="">
          <h2>₹<span class="count"><%=funds%></span></h2>
          <div class="progress" style="height: 10px;">
            <div id="progress-bar" class="progress-bar" role="progressbar" aria-valuenow="<%=per%>" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </div>
        <hr/>
        <h5 class="mt-3">Investors</h5>
        <div class="">
          <h2>₹<span class="count"><%=investor%></span></h2>
        </div>
        <hr />
        <h5 class="mt-3">Days Left to Invest</h5>
        <div class="">
          <h2><span class="count"><%=days%></span></h2>
        </div>
        <hr/>
        <div class="pt-3">
          <button style="width:100%" class="btn btn-primary" type="submit" name="button">Start Investing</button>
          <p class="text-center" style="text-size: 10px; color: grey; ">With Minimum ₹2000</p>
        </div>
      </div>
    </div>
</main>

<%- include('footer') -%>
